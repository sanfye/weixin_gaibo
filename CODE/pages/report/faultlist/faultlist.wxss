.item-middle {
  flex: 1;
  margin-left: 20rpx;
  padding-top: 20rpx;
  overflow: hidden;
}

.title {
  color: #000000;
  font-family: "微软雅黑";
  font-weight: bold;
  line-height: 20rpx;
  padding: 10rpx 16rpx, 0, 16rpx;
  font-size: 30rpx;
  margin-top: 10rpx;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis; /*文字隐藏后添加省略号*/
}

.time {
  font-family: "微软雅黑";
  color: #9c9c9b;
  font-size: 26rpx;
  overflow: hidden; /**自动隐藏文字*/
  text-overflow: ellipsis; /**文字隐藏后添加省略号*/
}


.item_right {
  padding-top: 20rpx;
  overflow: hidden;
  width: 320rpx;
  align-items: right;
  
  
