<view class="container"> 
 <view class="login-icon"> 
 <image class="login-img" src="../../images/coffeeLogo3.png"></image> 
 </view> 
 <view> 
 	<text style="font-size:16px;font-weight:bold;text-align:center;color:#595959">智能现磨咖啡售卖机的引领者</text>
 </view> 
 <view class="login-from"> 
  
 <!--账号-->
 <view class="inputView"> 
  <image class="nameImage" src="../../images/icon/account.png"></image> 
  <label class="loginLab">账号</label> 
  <input class="inputText" placeholder="请输入账号" bindinput="phoneInput" /> 
 </view> 
 <view class="line"></view> 
  
 <!--密码-->
 <view class="inputView"> 
  <image class="keyImage" src="../../images/icon/password.png"></image> 
  <label class="loginLab">密码</label> 
  <input class="inputText" password="true" placeholder="请输入密码" placeholder-class="input-placeholder" bindinput="passwordInput" /> 
 </view> 
 <view class="line"></view> 
  
 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn" type="defaule" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button> 
 </view> 
 </view> 
</view>